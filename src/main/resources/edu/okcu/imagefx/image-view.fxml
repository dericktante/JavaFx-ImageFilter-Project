<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="319.0" prefWidth="504.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.okcu.imagefx.ImageFXController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox>
        <ImageView fx:id="imgPicture" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin></ImageView>
        <ImageView fx:id="imgNewPicture" fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin></ImageView>
    </HBox>

    <Button text="Choose Image" onAction="#onChooseFileButtonClick" />

    <Button text="Filter Options"/>
    <ComboBox fx:id="filterComboBox" />

    <Button text="Apply Filter" onAction="#onApplyFilterButtonClick" />


</VBox>
